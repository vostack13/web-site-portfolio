extends ../_layout

block variables
    - var title = 'Обо мне'

block content
    -
        var socials = [
            {
                class: 'gh',
                text: 'Github',
                link: 'https://github.com/vostack13'
            },
            {
                class: 'vk',
                text: 'Вконтакте',
                link: 'https://vk.com/sonlex'
            },
            {
                class: 'fb',
                text: 'Фейсбук',
                link: 'https://www.facebook.com/stanislav.vozikov.9'
            },
        ]

    // Cекция Hero
    section.section.hero
        .hero__row-top
            .hero__socials
                ul.socials
                    each item in socials
                        li.socials__item
                            a(
                                href=`${item.link}`
                                class=`socials__item-link-${item.class}` 
                                target="_blank"
                            ).socials__item-link 
                                svg(
                                    class=`socials__item-icon-${item.class} socials__item-icon`)
                                    use(xlink:href=`/assets/img/sprite.svg#${item.class}`)
            .hero__menu.hamburger
                button(type="button").hamburger__btn Меню
        .hero__title
            .section-title
                img.section-title__pic
            .user.hero__user
                .user__pic
                    img(src="/assets/img/avatar.jpg" alt="Аватар Станислава Возикова").user__pic-img
                .user__desc
                    .user__desc-name Станислав Возиков
                    .user__desc-info Личный сайт веб разработчика 
        .hero__scroll-btn
            button(type="button").arrow-down Вниз

    // Секция About
    section(id="about").section.about
        .about__left
            .about__triangle.about__triangle--left
                svg.triangle.triangle--fill-white
            .about__left-content
                .about__left-title
                    h2.block-title.about__block-title Обо мне
                .about__left-desc.user-desc
                        .user-desc__img
                            img(src="/assets/img/avatar_photo.jpg" alt="Аватар Станислава Возикова").user-desc__img-avatar
                        .user-desc__title
                            h3.block-subtitle Кто я
                        .user-desc__text.text-content
                            p Далеко-далеко за словесными горами в стране гласных и согласных живут рыбные тексты. Подзаголовок единственное жаренные точках, курсивных агентство выйти имени заголовок о. Текстами продолжил которой имеет предложения предупреждал курсивных, реторический гор маленькая.
                            p Далеко-далеко за словесными горами в стране гласных и согласных живут рыбные тексты. Подзаголовок единственное жаренные точках, курсивных агентство выйти имени заголовок о.
        .about__right
            .about__triangle.about__triangle--right
                svg.triangle.triangle--fill-beige
            .about__right-title
                h3.block-subtitle Чем я могу быть Вам полезен
            .about__right-desc.text-content
                p Далеко-далеко за словесными горами в стране гласных и согласных живут рыбные тексты. Ее, несколько! Родного, переписали образ!
            .about__right-content
                ul.skills-list
                each item in ['Frontend', 'Backend', 'WorkFlow']
                    li.skills-list__item
                        .skills-row
                            .skills-row__title  #{item}
                            ul.skills-row__list
                                li.skills-row__item
                                    .skill
                                        .skill__circle
                                        .skill__title
    // Секция Map
    section.section.map
        .google-map
        .map__data
            .contacts
                .contacts__title
                    .block-subtitle Контакты
                ul.contacts__list
                    -
                        var contacts = [
                            ['skype', 'stanislavvozikov'],
                            ['mail', 'stanislav.vozikov@gmail.com'],
                            ['phone', '+7 123 999 99 99']
                        ]
                    
                    each item in contacts
                        li.contacts__item
                            .contact-row
                                .contact-row__icon #{item[0]}
                                .contact-row__content #{item[1]}
    // Футер
    footer.footer
        .footer__row
            .footer__col.footer__col-left
                .footer__menu
                    nav.menu
                        ul.menu__list
                            each item in ['Мои работы', 'Обо мне', 'Блог', 'Авторизация']
                                li.menu__item
                                    a(href="#").menu__link
            .footer__col.footer__col-right
                .footer__socials
                    ul.socials.social--rounded
                        each item in ['vk', 'gh', 'fb']
                            li.socials__item
                                a(href="" class=`social__item-${item}`).socials__link
        .footer__row
            .footer__col.footer__col-left
                .footer__text
                    p Далеко-далеко за словесными горами в стране гласных и согласных живут рыбные тексты. Предупреждал на берегу моей своего агентство.
            .footer__col.footer__col-right
                .footer__copyright
                    p © Станислав Возиков | создано с любовью в LoftSchool | 2018